package br.edu.academia.model;

public class Pessoa {
	

//		Atributos (privado) da pessoa
		private String nome;
		private double altura;
		private double peso;
		private double dataDeNascimento;
		private String sexo;
		private String nivelAtividade;
		private double imc;
		private double mcd;
		private String statusImc;
		
		
		public void setNome(String nome) {
			this.nome = nome;
		}
		
		public String getNome() {
			return this.nome;
		}
		
		public void setAltura(double altura) {
			this.altura = altura;
		}
		
		public double getAltura() {
			return this.altura;
		}
		
		public void setPeso(double peso) {
			this.peso = peso;
		}
		
		public double getPeso() {
			return this.peso;
		}
		
		public void setIdade(double dataDeNascimento) {
			this.dataDeNascimento = dataDeNascimento;
		}
		
		public double getIdade() {
			return this.dataDeNascimento;
		}
		
		public void setSexo(String sexo) {
			this.sexo=sexo;
		}
		
		public String getSexo() {
			return this.sexo;
		}
		
		public void setNivelAtividade(String nivelAtividade) {
			this.nivelAtividade = nivelAtividade;
		}
		
		public String getNivelAtividade() {
			return this.nivelAtividade;
		}
		
//		Calcular IMC da pessoa 
		public double getImc() {
			return this.peso / this.altura*altura;
		}
		
//		Calcular Necessidade Energética
		public double getMcd() {
			
		}
}
